{{!
    @template mod_bigbluebuttonbn/setting_repeater

    Context variables required for this template:
    * id - The DOM id for the wrapper.
    * fieldname - The base form field name.
    * values - List of existing values to display.
    * addlabel - Label for the add button.
    * removelabel - Label for the remove buttons.
}}
<div id="{{id}}" class="bbb-setting-repeater" data-repeater-root>
    <div class="bbb-repeater-items" data-repeater-items>
        {{#values}}
        <div class="bbb-repeater-item mb-2 d-flex align-items-start gap-2" data-repeater-item>
            <input type="text" name="{{fieldname}}[]" value="{{.}}" class="form-control">
            <button type="button" class="btn btn-secondary" data-repeater-remove>{{removelabel}}</button>
        </div>
        {{/values}}
    </div>
    <button type="button" class="btn btn-secondary" data-repeater-add>{{addlabel}}</button>
    <div class="d-none" data-repeater-template>
        <div class="bbb-repeater-item mb-2 d-flex align-items-start gap-2" data-repeater-item>
            <input type="text" name="{{fieldname}}[]" value="" class="form-control">
            <button type="button" class="btn btn-secondary" data-repeater-remove>{{removelabel}}</button>
        </div>
    </div>
</div>
