{{!
    @template mod_bigbluebuttonbn/recordings_table_plain

    This template renders the mobile page.

    Example context (json):
    {
        "instanceid" : 3,
        "recordingsoutput": [],
    }
}}
<div class="mod_bigbluebuttonbn_recordings_table_plain table table-striped" data-bbbid="{{instanceid}}">
        <div>
            <h4>{{$title}}{{/title}}</h4>
        </div>
        <div class="mt-3">
            {{#recordingwarnings}}
                {{>core/notification}}
            {{/recordingwarnings}}
        </div>
    {{#recordingsoutput}}
        <!-- Table Headers -->
        {{#first}}
        <div class="row mb-3 font-weight-bold">
            <div class="col-md-1">{{headers.playback}}</div>
            <div class="col-md-1">{{headers.name}}</div>
            <div class="col-md-2">{{headers.description}}</div>
            <div class="col-md-1">{{headers.preview}}</div>
            <div class="col-md-2">{{headers.date}}</div>
            <div class="col-md-1">{{headers.duration}}</div>
            <div class="col-md-4">{{headers.actionbar}}</div>
        </div>
        {{/first}}

        <!-- Table Data -->
        <div class="row mb-3 align-items-center">
            <div class="col-md-1">
                {{{playback}}}
            </div>
            <div class="col-md-1">
                {{{recording}}}
            </div>
            <div class="col-md-2">
                {{{description}}}
            </div>
            <div class="col-md-1">
                {{{preview}}}
            </div>
            <div class="col-md-2">
                {{{date}}}
            </div>
            <div class="col-md-1">
                {{{duration}}}
            </div>
            <div class="col-md-4">
                {{{actionbar}}}
            </div>
        </div>
    {{/recordingsoutput}}
    {{^recordingsoutput}}
        <div id="bigbluebuttonbn_recordings_table">{{#str}}view_message_norecordings, mod_bigbluebuttonbn{{/str}}</div>
        <div class="mt-3">
            {{#recordingwarnings}}
                {{>core/notification}}
            {{/recordingwarnings}}
        </div>
    {{/recordingsoutput}}
</div>

{{#js}}
    require(['mod_bigbluebuttonbn/recordings_plain']);
{{/js}}
