{{!
    @template mod_bigbluebuttonbn/recordings_table_plain

    This template renders the mobile page.

    Example context (json):
    {
        "instanceid" : 3,
        "recordings": [],
    }
}}
<div class="mod_bigbluebuttonbn_recordings_table_plain">
    {{#recordingsoutput}}
        <div class="row mb-3 align-items-center">
            <div class="col-md-1">
                {{{playback}}}
            </div>
            <div class="col-md-1">
                {{{recording}}}
            </div>
            <div class="col-md-2">
                {{{description}}}
            </div>
            <div class="col-md-2">
                {{{preview}}}
            </div>
            <div class="col-md-2">
                {{{date}}}<br>{{{duration}}}
            </div>
            <div class="col-md-4">
                {{{actionbar}}}
            </div>
        </div>
    {{/recordingsoutput}}
    {{^recordingsoutput}}
        <div id="bigbluebuttonbn_recordings_table">{{#str}}view_message_norecordings, mod_bigbluebuttonbn{{/str}}</div>
        <div class="mt-3">
            {{#recordingwarnings}}
                {{>core/notification}}
            {{/recordingwarnings}}
        </div>
    {{/recordingsoutput}}
</div>
